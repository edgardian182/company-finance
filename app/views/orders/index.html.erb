<div class="container">
  <div class="row">
    

    <div class="row" style="margin-top: 10px;">
      <div class="summary-box col-xs-6 text-center">
        <div class="summary-value" id="total">
          <%= number_to_currency(@orders.where(state:3).sum(:amount)) %>
        </div>
        <div class="summary-label">Ingresos</div>
      </div>
      <div class="summary-box col-xs-6 text-center">
        <div class="summary-value" id="transactions"><%= @orders.count %></div>
        <div class="summary-label">NÂº de Pedidos</div>
      </div>
    </div>



    <%= form_tag orders_path, remote:true, method: :get, id:"order-lookup-form" do %>
      <div class="form-group">
        <div class="col-xs-6">
          <div class="input-group">
            <span class="input-group-btn">
              <%= button_tag(type: :submit, class:"btn btn-info") do %>
                <span class="glyphicon glyphicon-search"></span>
              <% end %>
            </span>
            <%= text_field_tag :name, params[:search], placeholder: "Buscar pedido", autofocus:true, class:"form-control" %> 
          </div>
        </div>
      </div>
    <% end %>


   <!--  <div class="col-xs-6 text-right">
      <%= link_to "<span class='glyphicon glyphicon-plus'></span> Generar pedido".html_safe, new_order_path, class: "btn btn-success", remote: true %>
    </div> -->
    <br><br><br>

    <table id="orders-table" class="table table-hover" style="margin-top: 20px;">
      <thead>
        <tr>
          <th class="">Fecha</th>
          <th class="">Cliente</th>
          <th class="">Fecha de entrega</th>
          <th class="">Fecha de pago</th>
          <th class="">Valor</th>
          <th class="">Deuda</th>
          <th class="">Vendedor</th>
          <th class="">Estado</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if !@orders.empty? %>
          <% @orders.each do |order| %>
            <%= render 'row', order: order %>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <br><br>
    <% if @orders.empty? %>
      <h2 class="text-center">No se han generado pedidos</h2>
    <% end %>
  
  </div>
</div>