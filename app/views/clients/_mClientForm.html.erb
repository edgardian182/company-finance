<div class="modal fade" id="newClient" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        
        CLIENTE

      </div>

      <%= form_for @client, remote: true, authenticity_token: true do |f| %>
        <div class="modal-body">
            
          <div class="row">
            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :nombre %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :apellido %>
                <%= f.text_field :lastname, class: "form-control" %>
              </div>
            </div>

            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :direcciÃ³n %>
                <%= f.text_field :address, class: "form-control" %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :celular %>
                <%= f.text_field :phone, class: "form-control" %>
              </div>
            </div>

            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email, class: "form-control" %>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :ciudad %>
                <%= f.text_field :city, class: "form-control" %>
              </div>
            </div>

            <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :referencia %>
                <%= f.text_field :reference, class: "form-control" %>
              </div>
            </div>

            <% if current_user.superadmin_role || current_user.supervisor_role %>
              <div class="col-xs-6">
                <div class="form-group">
                  <%= f.label :vendedor %>
                  <%= f.collection_select :user_id, User.all, :id, :name, {selected: @client.user_id}, {class: "form-control"} %>
                </div>
              </div>
            <% end %>
            <!-- <div class="col-xs-6">
              <div class="form-group">
                <%= f.label :foto %>
                <%= f.file_field :photo %>
              </div>
            </div> -->
          </div>
        </div>

        <div class="modal-footer">
          <%= link_to "Cancel", "#", class:"btn btn-default", 'data-dismiss': "modal" %>
          <%= f.submit class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>

  </div>
</div>