<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="filter-header">Transaction Type <span>Choose to filter</span></h4>
      <div class="list-group filter-type">
        <% @types.each do |type| %>
          <a href="#" class="list-group-item"><%= type.name %></a>
        <% end %>
      </div>

      <h4 class="filter-header">Categories <span>Choose to filter</span></h4>
      <div class="list-group filter-type">
        <% @categories.each do |category| %>
          <a href="#" class="list-group-item"><%= category.name %></a>
        <% end %>
      </div>
    </div>
    <div class="col-md-9 index-data">
      <div class="row" style="margin-top: 10px;">
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value" id="total"><%= number_to_currency(@expenses.sum(:amount)) %></div>
          <div class="summary-label">Total</div>
        </diV>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value" id="transactions"><%= @expenses.count %></div>
          <div class="summary-label">Transactions</div>
        </div>
        <div class="summary-box col-md-4 text-center">
          <div class="summary-value" id="average"><%= number_to_currency(@expenses.average(:amount)) %></div>
          <div class="summary-label">Average</div>
        </div>
      </div>

      <div class="row" style="margin-top: 20px;">
        <div class="col-md-12">
         <!--  <a href="#newExpense" class="btn btn-success pull-left" data-toggle="modal"><span class="glyphicon glyphicon-plus"></span> New Expense</a> -->
          
          <!-- LINK QUE ABRE MODAL PARA NUEVO GASTO VIA JAVASCRIPT -->
          <%= link_to "<span class='glyphicon glyphicon-plus'></span> New Expense".html_safe, new_expense_path, class: "btn btn-success pull-left", remote: true %>
          


          <h4 class="dropdown pull-right">
            <button type="button" class="dropdown-toggle btn btn-link" data-toggle="dropdown">April 2016 <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li role="presentation"><a href="#">April 2016</a></li>
              <li role="presentation"><a href="#">March 2016</a></li>
              <!-- more months -->
            </ul>
          </h4>
        </div>
      </div>

      <table id="expenses-table" class="table table-hover" style="margin-top: 20px;">
        <thead>
          <tr>
            <th class="text-center">Día</th>
            <th>Concepto</th>
            <th class="text-center">Categoría</th>
            <th class="text-right">Valor</th>
          </tr>
        </thead>
        <tbody>

          <% @expenses.each do |expense| %>
            <tr id="<%= expense.id %>">
              <td class="date">
                <div class="day"><%= expense.created_at.day %></div>
                <div class="month"><%= Date::MONTHNAMES[expense.created_at.month] %></div>
              </td>
              <td>
                <div>
                  <span class="type"><%= expense.type.name %></span>
                </div>
                <div>
                  <span class="concept"><%= expense.concept %></span>
                </div>
              </td>
              <td class="category text-center"><%= expense.category.name %></td>
              <td class="text-right" style="width: 170px;">
                <div class="amount"><%= number_to_currency(expense.amount) %></div>
                <div class="actions">
                  <%= link_to "<span class='glyphicon glyphicon-edit'></span> Edit".html_safe, edit_expense_path(expense), remote: true %>
                  <%= link_to "<span class='glyphicon glyphicon-trash'></span> Delete".html_safe, expense_path(expense), method: :delete, data: {confirm: "Are you sure you want to delete this expense?"}, remote: true %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
