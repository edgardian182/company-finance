<% if @expense.errors.empty? %>
  // add the row to the table, show alert and hide modal

  // Selecciona la tabla de la pagin actual (index.html.erb de Expenses) y le agrega la informaci√≥n del _row.html.erb
  $('table tbody').append(' <%= j render "row", expense: @expense %>');

  // Actualizamos el valor promedio
  $('#average').html("<%= number_to_currency(@expenses.average(:amount)) %>");
  // Cuenta el numero de transacciones
  $('#transactions').html("<%= @expenses.count %>");
  // Actualizamos el total
  $('#total').html("<%= number_to_currency(@expenses.sum(:amount)) %>")

  $('.alert-success').html("The product has been created successfully").show();
  $('#newExpense').modal('hide');
<% else %>
  // show first error
  alert('<%= @expense.errors.full_messages[0] %>');
<% end %>